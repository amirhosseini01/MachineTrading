@page
@model MachineTrading.Pages.AddressesModel

@{
    ViewData["Title"] = "Addresses";
}
@if (ViewData["ErrorMessage"] is not null)
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}
<form method="post">
    <div class="row gy-3">
        <div class="col-lg-8">
            <label>url</label>
            <input type="url" name="Address.Url" class="form-control"/>
        </div>
        <div class="col-lg-2">
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-success d-block">
                Create Address
            </button>
        </div>
    </div>
</form>

@if (Model.Addresses is not null && Model.Addresses.Count >= 0)
{
    <div class="row mt-3">
        @foreach (var address in Model.Addresses)
        {
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">@address.Id</h4>
                    </div>
                    <div class="card-body">
                        @address.Url
                    </div>
                    <div class="card-footer">
                        <a href="?handler=Delete&addressId=@address.Id" class="btn btn-sm btn-danger">
                            delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}