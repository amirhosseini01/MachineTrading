@page
@model MachineTrading.Pages.AddressesModel

@{
    ViewData["Title"] = "Addresses";
}

<form method="post">
    <div class="row gy-3">
        <div class="col-lg-8">
            <label>url</label>
            <input type="url" name="Address.Url" class="form-control"/>
        </div>
        <div class="col-lg-2">
            <button type="submit" class="btn btn-success">
                Create Address
            </button>
        </div>
    </div>
</form>

@if (Model.Addresses is not null && Model.Addresses.Count == 0)
{
    foreach (var address in Model.Addresses)
    {
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@address.Id</h4>
            </div>
            <div class="card-body">
                @address.Url
            </div>
            <div class="card-footer">
                <button class="btn btn-sm btn-danger" onclick="DeleteAddress('@address.Id')">
                    delete
                </button>
            </div>
        </div>
    }
}

@section Scripts
{
    <script>
        function DeleteAddress(addressId) {
            $.ajax({
                type: 'get',
                url: '?handler=Delete',
                data: { addressId: addressId }
            })
        }
    </script>
}
